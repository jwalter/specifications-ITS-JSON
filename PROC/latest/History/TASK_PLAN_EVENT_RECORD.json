{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://www.openEHR.org/releases/ITS-JSON/Release-1.0.0/PROC/latest/History/TASK_PLAN_EVENT_RECORD.json",
    "title": "TASK_PLAN_EVENT_RECORD",
    "description": "Record of an runtime event to a Task Plan, including abandonment, performer allocation and re-allocation and so on.",
    "$comments": "Defined in History IM, inherits from EVENT_RECORD",
    "type": "object",
    "properties": {
        "time": {
            "description": "Time the event occurred.",
            "$ref": "https://www.openEHR.org/releases/ITS-JSON/Release-1.0.0/BASE/latest/Foundation_types/all.json#/definitions/Iso8601_date_time"
        },
        "description": {
            "description": "Optional description associated with the event. Would typically be populated for Cancel and Abort events.",
            "$ref": "https://www.openEHR.org/releases/ITS-JSON/Release-1.0.0/BASE/latest/Foundation_types/all.json#/definitions/String"
        },
        "details": {
            "description": "Other details as a name/value list.",
            "$ref": "https://www.openEHR.org/releases/ITS-JSON/Release-1.0.0/BASE/latest/Foundation_types/all.json#/definitions/Hash_of_String_String"
        }
    },
    "required": [
        "time",
        "details"
    ],
    "$inherits": [
        "all.json#/definitions/EVENT_RECORD"
    ]
}