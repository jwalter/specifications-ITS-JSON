{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://www.openEHR.org/releases/ITS-JSON/Release-1.0.0/PROC/latest/Definition/CONTEXT_VALUE.json",
    "title": "CONTEXT_VALUE",
    "description": "Any kind of value used in the Plan definition. Typed by the formal type of the value, i.e. Boolean, Integer etc. The types are represented by `EXPR_TYPE_DEF` descendants.",
    "$comments": "Defined in Definition IM, abstract",
    "type": "object",
    "properties": {
        "name": {
            "description": "Name of variable, as used in precondition and decision expressions.",
            "$ref": "https://www.openEHR.org/releases/ITS-JSON/Release-1.0.0/BASE/latest/Foundation_types/all.json#/definitions/String"
        },
        "type": {
            "description": "Type of this variable.",
            "$ref": "https://www.openEHR.org/releases/ITS-JSON/Release-1.0.0/BASE/latest/Foundation_types/all.json#/definitions/T"
        }
    },
    "required": [
        "name",
        "type"
    ],
    "$abstract": true
}