{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://www.openEHR.org/releases/ITS-JSON/components/PROC/latest/History/EVENT_RECORD.json",
    "title": "EVENT_RECORD",
    "description": "Abstract parent of types representing execution time events on a Task Plan.",
    "$comments": "Defined in History IM, abstract",
    "type": "object",
    "properties": {
        "_type": {
            "enum": [
                "TASK_PLAN_EVENT_RECORD",
                "TASK_EVENT_RECORD"
            ]
        },
        "time": {
            "description": "Time the event occurred.",
            "$ref": "https://www.openEHR.org/releases/ITS-JSON/components/BASE/latest/Foundation_types/all.json#/definitions/Iso8601_date_time"
        },
        "description": {
            "description": "Optional description associated with the event. Would typically be populated for Cancel and Abort events.",
            "$ref": "https://www.openEHR.org/releases/ITS-JSON/components/BASE/latest/Foundation_types/all.json#/definitions/String"
        }
    },
    "required": [
        "_type",
        "time"
    ],
    "$abstract": true,
    "$children": [
        "all.json#/definitions/TASK_PLAN_EVENT_RECORD",
        "all.json#/definitions/TASK_EVENT_RECORD"
    ]
}